@page "{Email}"
@model ATM_Replica.Pages.UserDashboardModel
@{

    ViewData["Title"] = "User Dashboard";

}

<body class="">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ATM_Replica</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end mt-2 mt-md-0">
                    <ul class="navbar-nav align-Items-center gap-md-3">
                        <li class="nav-item">
                            <p class="nav-link  fw-bold my-0">@Model.Email</p>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-page="/Index">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @if (Model.Email != null)
    {
        <section class="d-flex flex-column gap-3 container-fluid align-items-center mt-4 mx-auto">
            <h3 class="text-secondary">Welcome @Model.FirstName @Model.LastName</h3>

            <div class="d-flex flex-row col-md-6 gap-3 justify-content-center">
                <a asp-page="./WithdrawPage" asp-route-Email="@Model.Email" class="col-lg-3 col-md-4 col-7 text-decoration-none">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title text-secondary">Withdraw</h5>
                        </div>
                    </div>
                </a>
                <a asp-page="./Deposit" asp-route-Email="@Model.Email"  class="col-lg-3 col-md-4 col-6 text-decoration-none">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title text-secondary">Deposit</h5>
                        </div>
                    </div>
                </a>
            </div>

            <div class="d-flex flex-row col-md-6 mx-auto justify-content-center gap-3">
                <a asp-page="./Transfer" asp-route-Email="@Model.Email" class="col-lg-3 col-md-4 col-7 text-decoration-none">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title text-secondary">Transfer</h5>
                        </div>
                    </div>
                </a>
                <a asp-page="./PayBills" asp-route-Email="@Model.Email" class="col-lg-3 col-md-4 col-6 text-decoration-none">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title text-secondary">Pay Bills</h5>
                        </div>
                    </div>
                </a>
            </div>


            <div class="d-flex flex-row col-md-6 gap-3 justify-content-center">
                <a asp-page="./CheckBalance" asp-route-Email="@Model.Email" class="col-lg-3 col-md-4 col-7 text-decoration-none">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title text-secondary">Check Balance</h5>
                        </div>
                    </div>
                </a>
                <a asp-page="./ChangePaswword" asp-route-Email="@Model.Email" class="col-lg-3 col-md-4 col-6 text-decoration-none">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title text-secondary">Change Pin</h5>
                        </div>
                    </div>
                </a>
            </div>
        </section>

    }
</body>

